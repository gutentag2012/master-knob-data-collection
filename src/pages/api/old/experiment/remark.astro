---
import ExperimentRemarks from "../../../../components/old/ExperimentRemarks.js";
import {currentExperimentId, updateRemark} from "../../../../lib/old/state.ts";
import {db, eq, experiments} from "astro:db";
export const partial = true;
export const prerender = false;

if(Astro.request.method === 'POST' && currentExperimentId.value) {
  const newRemark = await Astro.request.formData()
  const remarkText = newRemark.get("remark")?.toString() || ""
  await updateRemark(remarkText)
}
