---
interface Props {
  name: string
  label: string
  options?: string[]
}
const {name, label} = Astro.props
---
<div class="flex-1">
  <label for={name} class="block mb-1">{label}</label>
  <div class="flex flex-col space-y-2">
    <input
        type="range"
        min="0"
        max="3"
        step="1"
        value="0"
        name={name}
        class="w-full h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer accent-indigo-600
             [&::-webkit-slider-thumb]:w-4 [&::-webkit-slider-thumb]:h-4 [&::-webkit-slider-thumb]:rounded-full [&::-webkit-slider-thumb]:bg-indigo-600
             [&::-moz-range-thumb]:w-4 [&::-moz-range-thumb]:h-4 [&::-moz-range-thumb]:rounded-full [&::-moz-range-thumb]:bg-indigo-600
             focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2
             hover:[&::-webkit-slider-thumb]:bg-indigo-700 hover:[&::-moz-range-thumb]:bg-indigo-700"
    />

    <div class="w-full text-sm text-gray-500 font-medium select-none flex">
        <p class="flex-1 text-start">Keine</p>
        <p class="flex-1 text-start pl-11">Wenig</p>
        <p class="flex-1 text-end pr-12">Etwas</p>
        <p class="flex-1 text-end">Viel</p>
    </div>
  </div>
</div>
